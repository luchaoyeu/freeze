/* pages/comment/comment.wxss */
.detail-container{
  height:400rpx;
  filter:blur(40rpx);             /*高斯模糊滤镜  */
  opacity: 0.9;                     /*透明度*/ 
}

/*底层，遮罩层*/
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top:0;
  left:0;
  z-index: -1;
}

/*电影详情的列表*/
.detail-info{
  position: absolute;
  display: flex;
  top:0;
  left:0;
  width:100%;
  height:400rpx;         /*高度和遮罩层的高度一样*/
  padding: 20rpx;
}
.detail-img{
  width:280rpx;
  height:90%;
  margin-right:24rpx;        /*右边文字间距*/
}

/*右侧区域，占满剩余部分*/
.detail{
  flex-grow:1;   /* 剩余的空间一等分 */
  line-height:60rpx;
}
.detail view{
  color:#fff;
  font-size:24rpx;
}

/*打分*/
.detail .detail-sc{
  color:#fc0;
  font-size:36rpx;
  font-weight:700;
}
.desc{
  padding: 20rpx;
  font-size:24rpx;
  color:#555;
}

.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}